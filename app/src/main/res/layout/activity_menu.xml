<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:elevation="190dp"
    android:orientation="vertical"
    android:outlineAmbientShadowColor="@color/black"
    android:outlineSpotShadowColor="@color/black"
    app:cardCornerRadius="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layoutDirection="rtl"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/meal_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginRight="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/chicken" />

        <LinearLayout
            android:paddingVertical="15dp"
            android:paddingHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/meal_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:lineHeight="@dimen/cardview_default_elevation"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:paddingRight="8dp"
                android:text="Chicken Feast"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/meal_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:lineHeight="15dp"
                android:lineSpacingExtra="6dp"
                android:lineSpacingMultiplier="0.5"
                android:maxLines="2"
                android:paddingLeft="5dp"
                android:paddingRight="8sp"
                android:text="500sh"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/meal_price"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:text="Flavourful chicken with a side of fries"

                android:textColor="@color/black"
                android:textSize="15dp" />

        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
