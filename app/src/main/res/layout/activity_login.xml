<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/white2">

    <EditText
        android:id="@+id/medtEmail"
        android:layout_width="266dp"
        android:layout_height="58dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="55dp"
        android:ems="10"
        android:layout_below="@id/medtDisplaytext"
        android:hint="Enter Your Email"
        android:inputType="textEmailAddress"
        android:textColorHint="#390502"
        android:textSize="30dp"
        android:fontFamily="sans-serif-smallcaps"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="183dp" />

    <EditText
        android:id="@+id/medtPassword"
        android:layout_width="264dp"
        android:layout_height="55dp"
        android:ems="10"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="55dp"
        android:layout_below="@id/medtEmail"
        android:hint="Enter Your Password"
        android:inputType="textPassword"
        android:textSize="26dp"
        android:textColorHint="#390502"
        android:fontFamily="sans-serif-smallcaps"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="276dp" />

    <TextView
        android:textSize="65dp"
        android:fontFamily="cursive"
        android:textColor="#390502"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="11dp"
        android:id="@+id/medtDisplaytext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Back !"
        android:gravity="center"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="44dp" />

    <Button
        android:id="@+id/mbtnLogin"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_below="@id/medtPassword"
        android:layout_marginLeft="100dp"
        android:textSize="35dp"
        android:fontFamily="serif"
        android:layout_marginTop="60dp"
        android:text="LOGIN"
        android:textColor="#390502"
        android:backgroundTint="#F44336"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="411dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/mbtnLogin"
        android:layout_marginTop="50dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="21dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Haven't got an account yet ?"
            android:layout_height="25dp"/>

        <TextView
            android:id="@+id/mtxtregister"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Register Here"
            android:textColor="#8F2503"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>